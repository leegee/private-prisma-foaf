datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Person {
  id        Int         @id @default(autoincrement())
  fullname  String
  published Boolean     @default(false)
  Friends   Relations[] @relation("PersonA")
  FriendsOf Relations[] @relation("PersonB")
}

model Relations {
  personA   Person @relation("PersonA", fields: [personAId], references: [id])
  personAId Int

  PersonB   Person @relation("PersonB", fields: [personBId], references: [id])
  personBId Int

  @@id([personAId, personBId])
}
