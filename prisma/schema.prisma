// https://www.prisma.io/docs/concepts/database-connectors/postgresql#type-mapping-between-postgresql-to-prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../erd.svg"
}

model Verb {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(127)
  description String?
  Action      Action[]

  @@unique([name])
}

model Entity {
  id          Int       @id @default(autoincrement())
  knownas     String    @db.VarChar(127) //  eg JFK, Bell
  formalname  String    @db.VarChar(127) // eg John F Kennedy, Bell Aircraft Corporation
  givenname   String?   @db.VarChar(127) // eg John
  middlenames String?   @db.VarChar(127) // eg Fitzgerald
  familyname  String?   @db.VarChar(127) // eg Kennedy
  dob         DateTime? @db.Date
  dod         DateTime? @db.Date
  approved   Boolean   @default(false)
  Subject     Action[]  @relation("Subject")
  Object      Action[]  @relation("Object")

  @@unique([knownas, dob, dod])
  @@unique([givenname, middlenames, familyname, dob, dod])
  @@index([knownas, id])
}

model Citation {
  id              Int     @id @default(autoincrement())
  url             String
  Action          Action? @relation(fields: [actionSubjectId, actionObjectId, actionVerbId], references: [subjectId, objectId, verbId])
  actionSubjectId Int?
  actionObjectId  Int?
  actionVerbId    Int?
}

model Action {
  subjectId Int
  Subject   Entity @relation("Subject", fields: [subjectId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  objectId Int
  Object   Entity @relation("Object", fields: [objectId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  verbId Int
  Verb   Verb @relation(fields: [verbId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  start DateTime @db.Date
  end   DateTime @db.Date

  citations Citation[]

  @@id([subjectId, objectId, verbId])
}
