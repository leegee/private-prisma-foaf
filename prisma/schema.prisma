datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../erd.svg"
}

model Verb {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  Relations   Relations[]
}

model Person {
  id        Int         @id @default(autoincrement())
  fullname  String
  published Boolean     @default(false)
  Friends   Relations[] @relation("PersonA")
  FriendsOf Relations[] @relation("PersonB")
}

model Relations {
  PersonA   Person @relation("PersonA", fields: [personAId], references: [id])
  personAId Int

  PersonB   Person @relation("PersonB", fields: [personBId], references: [id])
  personBId Int

  Verb   Verb @relation(fields: [verbId], references: [id])
  verbId Int

  @@id([personAId, personBId])
}
