// https://prismadb.readthedocs.io/en/stable/data-types/

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../erd.svg"
}

model Verb {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  Action      Action[]
}

model ActionDateRange {
  start DateTime @db.Date
  end   DateTime @db.Date

  Action          Action? @relation(fields: [actionSubjectId, actionObjectId, actionVerbId], references: [subjectId, objectId, verbId])
  actionSubjectId Int?
  actionObjectId  Int?
  actionVerbId    Int?
  @@unique([start, end])
}

model Person {
  id          Int       @id @default(autoincrement())
  knownas     String //  eg JFK
  givenname   String? // eg John
  middlenames String? // eg Fitzgerald
  familyname  String? // eg Kennedy
  dob         DateTime? @db.Date
  dod         DateTime? @db.Date
  published   Boolean   @default(false)
  Subject     Action[]  @relation("Subject")
  Object      Action[]  @relation("Object")
}

model Action {
  subjectId Int
  Subject   Person @relation("Subject", fields: [subjectId], references: [id])

  objectId Int
  Object   Person @relation("Object", fields: [objectId], references: [id])

  verbId Int
  Verb   Verb @relation(fields: [verbId], references: [id])

  dateRanges ActionDateRange[]

  @@id([subjectId, objectId, verbId])
}
