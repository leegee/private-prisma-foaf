datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../erd.svg"
}

model Verb {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  Relations   Relations[]
}

model Person {
  id        Int         @id @default(autoincrement())
  fullname  String
  published Boolean     @default(false)
  Friends   Relations[] @relation("Subject")
  FriendsOf Relations[] @relation("Object")
}

model Relations {
  Subject   Person @relation("Subject", fields: [SubjectId], references: [id])
  SubjectId Int

  Object   Person @relation("Object", fields: [ObjectId], references: [id])
  ObjectId Int

  Verb   Verb @relation(fields: [verbId], references: [id])
  verbId Int

  @@id([SubjectId, ObjectId])
}
