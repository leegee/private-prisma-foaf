datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../erd.svg"
}

model Verb {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  Relations   Relations[]
}

model Person {
  id        Int         @id @default(autoincrement())
  fullname  String // knownas String    // eg JFK
  // givenname String                   // eg John
  // middlenames String                 // eg Fitzgerald
  // familyname String                  // eg Kennedy
  published Boolean     @default(false)
  Subject   Relations[] @relation("Subject")
  Object    Relations[] @relation("Object")
}

model Relations {
  subjectId Int
  Subject   Person @relation("Subject", fields: [subjectId], references: [id])

  objectId Int
  Object   Person @relation("Object", fields: [objectId], references: [id])

  verbId Int
  Verb   Verb @relation(fields: [verbId], references: [id])

  @@id([subjectId, objectId, verbId])
}
