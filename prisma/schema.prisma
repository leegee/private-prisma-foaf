// https://prismadb.readthedocs.io/en/stable/data-types/

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../erd.svg"
}

model Verb {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  Action      Action[]

  @@unique([name])
}

model Person {
  id          Int       @id @default(autoincrement())
  knownas     String //  eg JFK
  givenname   String? // eg John
  middlenames String? // eg Fitzgerald
  familyname  String? // eg Kennedy
  dob         DateTime? @db.Date
  dod         DateTime? @db.Date
  published   Boolean   @default(false)
  Subject     Action[]  @relation("Subject")
  Object      Action[]  @relation("Object")

  @@unique([knownas, dob, dod])
  @@unique([givenname, middlenames, familyname, dob, dod])
  @@index([knownas, id])
}

model Citation {
  id     Int      @id @default(autoincrement())
  url    String
  Action Action[]
}

model Action {
  subjectId Int
  Subject   Person @relation("Subject", fields: [subjectId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  objectId Int
  Object   Person @relation("Object", fields: [objectId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  verbId Int
  Verb   Verb @relation(fields: [verbId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  start DateTime @db.Date
  end   DateTime @db.Date

  citationId Int?
  Citation   Citation? @relation(fields: [citationId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([subjectId, objectId, verbId])
}
