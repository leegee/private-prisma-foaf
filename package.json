{
  "name": "script",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "16.11.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "jest-mock-extended": "^2.0.4",
    "nanoid": "^3.1.30",
    "pg": "^8.7.1",
    "pino-pretty": "^7.2.0",
    "prisma": "^3.5.0",
    "prisma-erd-generator": "^0.6.0",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  },
  "scripts": {
    "dev": "ts-node ./bin/script.ts",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:int": "jest --testPathPattern \\.int\\.spec\\.ts$",
    "test:unit": "jest --testPathIgnorePatterns \\.int\\.spec\\.ts$ --testPathPattern \\.spec\\.ts$",
    "test:watch": "cross-env JEST_WATCH=1 jest --watch",
    "test:watch:int": "cross-env JEST_WATCH=1 jest --watch -- .int.spec.ts",
    "test:watch:unit": "cross-env JEST_WATCH=1 jest --watch -- .int.ts",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "update": "prisma generate",
    "db:start": "docker-compose up -d --remove-orphans",
    "db:stop": "docker-compose down",
    "db:shell": "docker exec -it postgres psql -U admin -a foaf",
    "db:sql": "docker exec -it postgres psql -U admin -a foaf -c 'SELECT * FROM entity;'",
    "preanew": "rimraf prisma/migrations && docker exec -it postgres psql -U admin -a postgres -c \"DROP DATABASE foaf\" || true",
    "anew": "npx prisma migrate dev --name init",
    "postanew": "npm run update && npm test"
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.1.0",
    "module-alias": "^2.2.2",
    "pino": "^7.3.0",
    "ts-jest": "^27.0.7",
    "xre": "^1.0.5",
    "xregexp": "^5.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "_moduleAliases": {
    "@src": "./src",
    "@test": "./test"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "rootDir": ".",
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts",
      "<rootDir>/test/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./test/lib/jest-setup.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^testlib/(.*)$": "<rootDir>/test/lib/$1"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "ignorePatterns": [],
    "rules": {
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/space-in-parens": [
        1,
        "always"
      ],
      "no-console": 1,
      "prettier/prettier": 2
    }
  }
}