{
  "name": "script",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "16.11.7",
    "prisma": "3.4.2",
    "prisma-erd-generator": "^0.6.0",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  },
  "scripts": {
    "init": "npm run db:init",
    "dev": "ts-node ./bin/script.ts",
    "prebuild": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "u": "prisma generate",
    "db:start": "docker-compose up -d --remove-orphans",
    "db:stop": "docker-compose down",
    "db:shell": "docker exec -it postgres psql -U admin -a foaf",
    "db:sql": "docker exec -it postgres psql -U admin -a foaf -c 'SELECT * FROM person;'",
    "db:init": "npx prisma migrate dev",
    "predb:init": "rimraf prisma/migrations && docker exec -it postgres psql -U admin -a postgres -c \"DROP DATABASE foaf\" || true",
    "postdb:init": "npm run u && npm run erd && npm test",
    "erd": "npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "3.4.2",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.1.0",
    "ts-jest": "^27.0.7"
  },
  "engines": {
    "node": ">=12.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}